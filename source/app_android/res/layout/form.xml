<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout 
    android:id="@+id/formlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/formTextDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Details to Register"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textFormUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID" 
        android:layout_margin="5dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/editFormUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:ems="10" >

      
        
    </EditText>
     <TextView
        android:id="@+id/textFormEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID" 
        android:layout_margin="5dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/editFormEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:ems="10" />
    <TextView
        android:id="@+id/textFormPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password" 
        android:layout_margin="5dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/editFormPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
       
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textFormCPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password" 
        android:layout_margin="5dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/editFormCPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
       
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonFormContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue" />

</LinearLayout>
</ScrollView>